{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run dev server",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "start"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development",
        "PORT": "4173",
        "HOST": "0.0.0.0",
        "DEBUG_PROXY": "1"
      },
      "restart": true
    },
    {
      "name": "Attach to running server",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "address": "localhost",
      "restart": true,
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}

